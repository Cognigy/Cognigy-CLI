{
    "compileOnSave": true,
    "compilerOptions": {
      "types": [
        "node",
        "mocha",
      ],
      "typeRoots": ["node_modules/@types"],
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "target": "es2020", 
      "module": "commonjs",
      "rootDir": "src", 
      "outDir": "build",
      "sourceMap": true,
      "moduleResolution": "node",
      "skipLibCheck": true,
      "resolveJsonModule": true
    },
    "exclude": [
      "node_modules",
      "old",
      "build",
      "./vscode",
      "agent"
    ],
    "include": [
      "src/**/*"
    ]
}
