{
    "compileOnSave": true,
    "compilerOptions": {
      "types": [
        "node",
        "mocha",
      ],
      "typeRoots": [ "../node_modules/@types" ],
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "target": "es2017", 
      "module": "commonjs",
      "rootDir": "src", 
      "outDir": "build",
      "sourceMap": true,
      "moduleResolution": "node",
      "watch": false,
      "resolveJsonModule": true
    },
    "exclude": [
      "node_modules",
      "old",
      "build",
      "./vscode",
      "agent"
    ]
  }